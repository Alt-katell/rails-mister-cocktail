<div class="container">
  <h1><%= @cocktail.name %></h1>

  <br>

  <h3>Recipe</h3>

  <br>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> <%=dose.ingredient.name %></li>
      <% end %>
    </ul>
  <br>

  <button class="btn btn-success"><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail.id), :style => "color: white" %></button>

  <br>

  <p><%= link_to "Delete this cocktail", cocktail_path(@cocktail.id), method: "delete", data: { confirm: "Are you sure?" } %></p>

  <br>

  <p><%= link_to "Back to cocktail list", cocktails_path %></p>

</div>
